@using MVC_DAY2.Models
@model Student

<br />

<div class="d-flex justify-content-center">
    <h2 class="text-success">Edit Student</h2>
</div>

<br />
<hr />
<br />

<form action="~/Student/Edit" method="post">

    <div class="form-group">
        <input type="number" name="Id" class="form-control" value="@Model.Id" hidden />
    </div>

    <div class="form-group">
        <label for="Name" class="form-label">Student Name</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" />
    </div>

    <div class="form-group">
        <label for="Age" class="form-label">Student Age</label>
        <input type="text" name="Age" class="form-control" value="@Model.Age" />
    </div>

    <div class="form-group">
        <label for="Address" class="form-label">Student Address</label>
        <input type="text" name="Address" class="form-control" value="@Model.Address" />
    </div>


    <div class="form-group">
        <label for="DeptId" class="form-label">Department</label>
        <select name="DeptId" class="form-control">
            <option value="@Model.DeptId">@Model.Department.DeptName</option>
            @foreach (var item in ViewBag._depts)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>

    <div class="d-flex justify-content-center gap-3 my-5">
        <input type="submit" value="Edit Student" class="btn btn-success" />
        <a href="~/Department/Index" class="btn btn-secondary">Cancel</a>
    </div>

</form>