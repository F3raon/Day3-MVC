@using MVC_DAY2.Models
@model IEnumerable<Student>

<br />

<div class="d-flex justify-content-center">
    <h2 class="text-success">Student Portal</h2>
</div>

<br />
<hr />
<br />

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Student Id</th>
            <th scope="col">Student Name</th>
            <th scope="col">Student Age</th>
            <th scope="col">Student Address</th>
            <th scope="col">Department</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td scope="row">@item.Name</td>
                <td scope="row">@item.Age</td>
                <td scope="row">@item.Address</td>
                <td scope="row">@item.Department.DeptName</td>
                <td>
                    <a href="~/Student/Details/@item.Id" class="btn btn-primary mx-2">View</a>
                    <a href="~/Student/Edit/@item.Id" class="btn btn-secondary mx-2">Edit</a>
                    <a href="~/Student/Delete/@item.Id" class="btn btn-danger mx-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <a href="~/Student/Create" class="btn btn-success">Add Student</a>
    </tfoot>
</table>