@model MVC_DAY2.Models.Department
<br />

<div class="d-flex justify-content-center">
    <h2 class="text-success">Add New Department</h2>
</div>

<br />
<hr />
<br />

<form action="~/Department/Create" method="post">

    <div class="form-group">
        <label for="DeptName" class="form-label">Department Name</label>
        <input type="text" name="DeptName" class="form-control" />
    </div>

    <div class="d-flex justify-content-center gap-3 my-5">
        <input type="submit" value="Create Department" class="btn btn-success" />
        <a href="~/Department/Index" class="btn btn-secondary">Cancel</a>
    </div>

</form>