@using MVC_DAY2.Models

@model IEnumerable<Department>



<br />

<div class="d-flex justify-content-center">
    <h2 class="text-success">Departments Portal</h2>
</div>

<br />
<hr />
<br />

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Department Id</th>
            <th scope="col">Department Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.DeptId</th>
                <td scope="row">@item.DeptName</td>
                <td>
                    <a href="~/Department/Details/@item.DeptId" class="btn btn-primary mx-2">View</a>
                    <a href="~/Department/Edit/@item.DeptId" class="btn btn-secondary mx-2">Edit</a>
                    <a href="~/Department/Delete/@item.DeptId" class="btn btn-danger mx-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <a href="~/Department/Create" class="btn btn-success">Add Department</a>
    </tfoot>
</table>